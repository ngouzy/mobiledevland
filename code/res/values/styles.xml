<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:listViewStyle">@style/StyleListView</item>
        <item name="android:actionBarStyle">@style/MOBI.ActionBar</item>
    </style>
    
     <style name="MOBI.ActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/header</item>
        
    </style>
    
    
     <!-- Splashscreen theme. -->
    <style name="AppThemeNoActionBar" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
    
    <style name="StyleListView">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@android:color/background_dark</item>
        <item name="android:listSelector">@drawable/list_select</item>
    </style>

</resources>

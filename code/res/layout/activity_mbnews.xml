<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MBNewsActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header" >

        <Button
            android:id="@+id/infos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:background="@drawable/butt_home"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/inscription"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/led"
            android:background="@drawable/butt_infos"
            android:text="s&apos;inscrire"
            android:textColor="#FFFFFF"
            android:visibility="invisible"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/led"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/led_off" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:background="@android:color/white"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="@string/title_activity_mbnews"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <Gallery
        android:id="@+id/coverflowMobi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp" />

    <ListView
        android:listSelector="@drawable/list_select"
        android:id="@+id/news_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>